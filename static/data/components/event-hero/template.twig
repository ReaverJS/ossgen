<section class="hero">
    <div class="img-wrapper">
        <img src="{{ background }}" alt="{{ title }}">
    </div>
    <div class="container">
        <div class="text-wrapper">
            <h4>{{ overtitle }}</h4>
            <h1>{{ title }}</h1>
            <h2>{{ subtitle }}</h2>
            <div class="event-card">
                <div class="text-wrapper">
                    <p>🏦 {{ city }}</p>
                    <p>📌 {{ address }}</p>
                </div>
                <div class="date-wrapper">
                    <h5>{{ date }}</h5>
                    <p>{{ month }}</p>
                </div>
            </div>
            <div class="btn-wrapper">
                <a href="#" data-scroll-to="{{ scrollTo }}" class="btn">{{ btnText }}</a>
            </div>
        </div>
    </div>
</section>